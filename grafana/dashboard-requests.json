{
  "dashboard": {
    "title": "Countries API - Request Monitoring",
    "tags": ["countries-api", "requests"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate({service=\"countries-api\"}[5m])",
            "refId": "A",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "HTTP Status Codes",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (statusCode) (count_over_time({service=\"countries-api\"}[1m]))",
            "refId": "A",
            "legendFormat": "{{statusCode}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"countries-api\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Requests by Method",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (method) (count_over_time({service=\"countries-api\"}[5m]))",
            "refId": "A",
            "legendFormat": "{{method}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate({service=\"countries-api\", level=\"error\"}[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 20}
      },
      {
        "id": 6,
        "title": "Total Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(count_over_time({service=\"countries-api\"}[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 20}
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}

